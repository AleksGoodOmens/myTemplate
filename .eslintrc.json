{
  "env": {
    "es6": true,
    "jquery": true
  },
  "overrides": [
    {
      "files": [ "src/**/*.js" ],
      "extends": [
        "standard",
        "htmlacademy/es6"
      ],
      "rules": {
        "no-console": 0,
        "no-invalid-this": "off",
        "no-unused-vars": "off",
        "indent": [
          "error",
          2
        ],
        "semi": [
          "error",
          "never"
        ],
        "quotes": [
          "error",
          "single"
        ]
      }
    }
  ]
}
